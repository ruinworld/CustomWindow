<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/shape_rect_orange"
        android:gravity="center"
        android:text="支付"
        android:textColor="#ffffff"
        android:textSize="45px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvPayWeixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawablePadding="30px"
            android:gravity="center_vertical"
            android:padding="50px"
            android:text="微信支付"
            android:textColor="#000000"
            android:textSize="45px" />

        <View
            android:id="@+id/lineView"
            android:layout_width="500px"
            android:layout_height="1px"
            android:layout_below="@id/tvPayWeixin"
            android:layout_centerHorizontal="true"
            android:background="#d7d7d7" />

        <TextView
            android:id="@+id/tvPayAli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvPayWeixin"
            android:layout_below="@id/lineView"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawablePadding="30px"
            android:gravity="center_vertical"
            android:padding="50px"
            android:text="支付宝支付"
            android:textColor="#000000"
            android:textSize="45px" />
    </RelativeLayout>

</LinearLayout>